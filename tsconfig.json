{
	"compilerOptions": {
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"types": ["jest", "node"],
		"pretty": true,
		"sourceMap": true,
		"target": "es2017",
		"outDir": "dist",
		"baseUrl": "./",
		"allowJs": true,
		"paths": {
			"@Core/*": ["server/base-ticket-team/*"],
			"@Service/*": ["server/services/*"],
			"@Applications/*": ["server/application/*"],
			"@Config/*": ["server/config/*"]
		}
	},
	"exclude": ["node_modules"]
}
